#!/bin/sh

echo "***************************************************************"
echo "*                                                             *"
echo "*                     Hello Chroot                            *"
echo "*                                                             *"
echo "***************************************************************"

#files
echo "**************************************************************"
echo "                         files                               *"
echo "**************************************************************"
cp -r /install/files/* /

#lists
echo "**************************************************************"
echo "                         lists                               *"
echo "**************************************************************"
apt-get update
apt-get -y install $(cat /install/lists/*list|xargs)

#debs
echo "**************************************************************"
echo "                         debs                                *"
echo "**************************************************************"
for D in $(ls /install/debs/*.deb);do
     dpkg -i $D
done
apt-get -y -f install

#parts
echo "**************************************************************"
echo "                         parts                               *"
echo "**************************************************************"
for P in $(ls /install/parts/);do
    if test -x /install/parts/$P/install.sh;then
       /install/parts/$P/install.sh
    fi
done

echo "***************************************************************"
echo "*                                                             *"
echo "*                     Goodbye Chroot                          *"
echo "*                                                             *"
echo "***************************************************************"



